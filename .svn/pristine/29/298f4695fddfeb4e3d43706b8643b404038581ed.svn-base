        <script>  
        $('.bookDetail .tabNav .container li').click(function() {
            $(this).addClass('cur').siblings().removeClass('cur');
            $(this).parent('.container').hide().siblings('.dropdown-toggle').removeClass('active').siblings('.overflow').find('.slidenav').show().siblings('.toggle').remove();

            var index=$(this).index();
            var left=$('.swiper-slide').eq(index).offset().left;

            var swiperWidth=0;
            $('.swiper-slide').each(function (i,item) {
                swiperWidth+=$(this).innerWidth();
                console.log(swiperWidth)

            });

            var oWidth=$('.overflow').width();
            if(swiperWidth-left<oWidth){
                $('.swiper-wrapper').css('transform','translate3d('+(-(swiperWidth-oWidth))+'px, 0px, 0px)')
            }else{
                $('.swiper-wrapper').css('transform','translate3d('+(-left)+'px, 0px, 0px)')
            }
            $('.swiper-slide').eq(index).find('a').addClass('active').parent().siblings().children('a').removeClass('active')
            k=0;
        });

        $('.bookDetail  .slidenav a').click(function () {
            $(this).addClass('active').parent().siblings().children('a').removeClass('active')
        })
        var k=0;
        $(".bookDetail  .tabNav .dropdown-toggle").click(function() {
            if(k==0){
                $(this).addClass('active');
                $(this).siblings('.container').show();
                $('.swiper-wrapper').css('transform','translate3d(0px, 0px, 0px)')
                $(this).siblings('.overflow').find('.slidenav').hide();
                $(this).siblings('.overflow').append('<span class="toggle">切换分类</span>');
                k=1;
            }else if(k==1){
                $(this).removeClass('active');
                $(this).siblings('.container').hide();
                $(this).siblings('.overflow').find('.toggle').remove();
                $(this).siblings('.overflow').find('.slidenav').show();
                k=0;
            }
        });


        </script>      
        <script>           
            var box = $('.bookDetail .caption');
            var text = box.html();
            var newBox = $('<div></div>');
            var btn = $('<a href="###" class="upfold fr"></a>');
            newBox.html (text.substring(0,110));
            btn.html(text.length > 110 ? "展开" : "") ;
            btn.click(function(){
                if (btn.html ()=="展开"){
                    btn.html ("收起");
                    newBox.html(text) ;
                    $(this).addClass('fold');
                }else{
                    btn.html ("展开");
                    newBox.html (text.substring(0,110));
                    $(this).removeClass('fold').addClass('upfold');
                }
            })
            box.html("");
            box.append(newBox);
            box.append(btn);
        </script> 
